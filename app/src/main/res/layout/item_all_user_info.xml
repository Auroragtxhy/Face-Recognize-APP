<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="10dp"
        app:cardElevation="1dp"
        android:focusable="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/allUser_image_imv"
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/task_unfinished" />

            <LinearLayout
                android:layout_marginStart="95dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/allUser_identifying_information_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="5dp"
                        android:lines="1"
                        android:text="识别信息："
                        android:textSize="18sp" />


                    <TextView
                        android:id="@+id/allUser_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/allUser_identifying_information_tv"
                        android:lines="1"
                        android:text="小蟹"
                        android:textColor="#00A6FF"
                        android:textSize="18sp" />

                    <Button
                        android:id="@+id/allUSer_to_check_info_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/btn_selector_all_user"
                        android:text="查看具体信息"
                        android:textSize="15sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/allUser_time_point_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="7dp"
                        android:text="时间点："
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/allUser_time_point_content_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_toEndOf="@+id/allUser_time_point_tv"
                        android:text="时间"
                        android:textColor="#00A6FF"
                        android:textSize="15sp" />


                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/allUser_open_or_not_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="5dp"
                        android:text="开门情况:"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/allUSer_open_or_not_content_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@+id/allUser_open_or_not_tv"
                        android:ellipsize="end"
                        android:lines="1"
                        android:text="ok"
                        android:textColor="#00A6FF"
                        android:textSize="15sp" />

                </RelativeLayout>
            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>